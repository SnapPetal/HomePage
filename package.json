{
  "name": "nextjs-cdk",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "watch": "lerna run watch --stream",
    "test": "lerna run test --",
    "cdk": "yarn --cwd infrastructure cdk",
    "dev": "yarn --cwd application dev",
    "deploy": "yarn build && yarn cdk synth && yarn cdk deploy --require-approval never"
  },
  "workspaces": [
    "application/*",
    "infrastructure/*"
  ],
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "resolutions": {
    "table": "6.0.4"
  }
}
